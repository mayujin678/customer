/* pages/my/often/index.wxss */
page{
  background-color: #F3F3F3;
}
.title{
  padding: 30rpx 0;
  text-align: center;
  color: #EF291A;
  font-size: 36rpx;
}
.title image{
  width: 40rpx;
}
.like{
  background-color: #F3F3F3;
}

.like_con{
	column-count: 2;
  padding: 15rpx 3.5%;
}
.like_list{
	break-inside: avoid;
	margin-bottom:15px;
  padding: 30rpx;
  box-shadow: 0 0 15rpx rgba(0, 0, 0, 0.103);
  background-color: #ffffff;
  border-radius: 10rpx;
}
.like_img{
  width: 260rpx;
  height: 260rpx;
  margin: 0 auto 20rpx auto;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}
.like_img image{
  width: 100%;
  height: 100%;
  transition: all .3s ease;
  opacity: 0;
}
.like_img-active{
  opacity: 1 !important;
}
.like_list_title{
  font-size: 26rpx;
  color: #333333;
}
.like_label{
  font-size: 24rpx;
  color: #999999;
}
.like_label text{margin-right: 30rpx;}
.like_buttom{
  width: 210rpx;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.like_buttom view:nth-child(1){
  font-size: 34rpx;
  color: #EF291A;
  display: inline-block;
}
.like_buttom text:nth-child(2){
  font-size: 24rpx;
  color: #BEBEBE;
  text-decoration:line-through;
  margin-left: 10rpx;
}
.like_buttom view:nth-child(3){
  font-size: 24rpx;
  color: #999999;
}
.like_shopping{
  margin-top: 25rpx;
  float: right;
  position: relative;
}
.like_shopping image{
  width: 60rpx;
}
.like_shopping .weui-badge{
  position:absolute;
  right:-14rpx;
  top:-17rpx;
  border:solid 5rpx #fff;
}
.special{
  width: 98rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  border-radius: 50%;
  font-size: 21rpx;
  position: absolute;
  top: 0;left: 0;bottom: 0;right: 0;
  margin: auto;
  color: #ffffff;
  background-color: rgba(0, 0, 0, 0.6);
}


.mask_tiem{
  background-color: #FFFFFF;
  height:90rpx;
  border-top: 2rpx solid #EEEDEF;
  text-align: center;
  line-height: 90rpx;
  font-size: 30rpx;
}
.mask_tiem view:nth-child(1){
  flex: 1;
  color: #666666;  
}
.mask_tiem view:nth-child(2){
  background-color: #C3D939;
  flex: 1;
  color: #FFFFFF;
}