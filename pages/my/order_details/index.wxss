page{
  background-color: #F3F3F3;
  color: #333333;
}
#container{
  margin-bottom: 150rpx;
  padding: 0 30rpx;  
}
/* 头部 */
#header{
  padding: 30rpx 15rpx;
}
#header view{
  font-size: 45rpx;
  font-weight: bold;
}
#header text{
  font-size: 30rpx;
  color: #666666;
  display: block;
}
/* 联系人信息 */
.contacts{
  padding: 0 20rpx;
  background-color: #ffffff;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}
.contacts_title{
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 2rpx solid #F3F3F3;
  font-weight: bold;
  font-size: 32rpx;
  position: relative;
  padding: 0 30rpx;
}
.contacts_title::after{
  content: "";
  position: absolute;
  left: 0;top: 30rpx;
  width: 8rpx;
  height: 30rpx;
  background-color: #C3D939;
}
.contacts_con{
  padding: 20rpx 0;
}
.contacts_con_view{
  font-size: 32rpx;
  color: #333333;
  word-break:break-all;
}
.contacts_con text{
  color: #666666;
  font-size: 22rpx;
  word-break:break-all;
}
.contacts_con_address{
  color: #666666;
  font-size: 22rpx;
  line-height: 70rpx;
}
.contacts_con_address text:nth-child(2){
  margin-right: 10rpx;
}
.contacts_con_address text:nth-child(3){
  color: #EF291A;
  margin-left: 10rpx;
}
.contacts_con_address image{
  width: 17rpx;
  margin: 0 10rpx 0 0
}
.weui-flex{
  padding: 20rpx 0;
}
.contacts_tiem{
  line-height: 70rpx;
  font-size: 26rpx;
  color: #333333;
}
.contacts_tiem image{
  width: 30rpx;
  margin: 0 15rpx 5rpx 0;
}
.goods_image{
  width: 110rpx;
  height: 110rpx;
}
.goods_image image{
  width: 100%;
  height: 100%;
}
.goods_details{
  padding-left: 20rpx;
  flex: 1;
}
.goods_title{
  font-size: 30rpx;
  line-height: 50rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: inline-block;
}
.goods_refund{
  font-size: 26rpx;
  color: #FA8B14;
  float: right;
}
.goods_information{
  font-size: 26rpx;
  color: #999999;
  /* margin-top: 15rpx; */
}
.information_price{
  color: #EF291A;
  margin-right: 30rpx;
}
.prime_cost{
  text-decoration:line-through;
}
.information_num{
  float: right;
}
.goods_total{
  border-top: 2rpx solid #F3F3F3;
  padding: 20rpx 0;
  color: #666666;
  font-size: 26rpx;
  overflow: hidden;
}
.goods_total view{
  height: 60rpx;
  line-height: 60rpx;
}
.goods_total text{
  float: right;
}
.payment text{
  float: none
}
.goods_coupon text{color: #333333;}
.payment{
  text-align: right;
  margin-top: 20rpx;
}
.payment text{  
  color: #F03E33;
  font-size: 35rpx;
}
.order_details{
  color: #999999;
  font-size: 30rpx;
  padding: 20rpx 0;
}
.order_details view{
  height: 80rpx;
  line-height: 80rpx;
}
.order_details text{
  color: #333333;
  float: right;
}

/* 操作按钮 */
#footer{
  padding: 30rpx;
  background-color: #ffffff;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  width: 690rpx;
}
#footer button{
  float: right;
  position: static;
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx; 
  padding: 0 !important;
  width: 200rpx;
  border-radius: 40rpx;
  margin-left: 20rpx;
}
.footer_printing,.footer_service{
  color: #999999;
  border: 4rpx solid #EEEEEE;
  background-color: #ffffff;
}
.footer_phone{
  color: #ffffff;
  border: 4rpx solid #EF291A;
  background-color: #EF291A;
}
.footer_pin{
  color: #ffffff;
  border: 4rpx solid #EF291A;
  background-color: #EF291A;
}