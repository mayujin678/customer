/* pages/my/gold/index.wxss */
page{
  background-color: #ffffff;
}
#header{
  background-color: #F3F3F3;
  padding: 3.5%;
}
.header{
  align-items: center;
  padding: 70rpx;
  background-color: #C3D939;
  border-radius: 15rpx;
  color: #ffffff;
}
.header_left{
  width: 70%;
}
.header_left view{
  font-size: 50rpx;
}
.header_left text{
  font-size: 26rpx;
}
.header_right{
  width: 30%;
  position: relative;
}
.header_right image{
  width: 130rpx;
  position: absolute;
  right: -10rpx;
  bottom: -130rpx;
}
/* 选项卡 */
.nav{
  align-items: center;
  height: 80rpx;
}
.nav_item{
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color:#666666;
  position: relative;
}
.nav>.nav_item_on::after{
  content: "";
  position: absolute;
  bottom: -10rpx;
  width: 50rpx;
  left: 40%;
  height: 6rpx;
  background-color: #C3D939;
}
/* 账号管理 */
.account{
  width: 93%;
  margin: 0 auto;
}
.account_list{
  padding: 20rpx 2%;
  background-color: #ffffff;
  border-bottom: 2rpx solid #EEEEEE;
}
.account_user{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
  margin-top: 10rpx;
}
.account_user image{
  width: 100%;
  height: 100%;
}
.account_con{
  flex: 1; 
  padding-left: 30rpx;
}
.account_con text{
  font-size: 26rpx;
}
.account_con view{
  font-size: 26rpx;
  color: #999999;
}
.account_operation{
  width: 150rpx;
  text-align: right;
  color: #333333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}