/* pages/my/coupon/index.wxss */
page{
  background-color: #ffffff;
}
#coupon{
  padding-top: 30rpx;
}
.coupon_list{
  margin: 0 3.5% 30rpx 3.5%;
  border-radius: 15rpx;
  padding: 5rpx;
  position: relative;
}
.coupon_list>image{
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.coupon_left{
  width: 30%;
  text-align: center;
  color: #666666;
  border-right: 2rpx dashed #EEEEEE;
  margin: 30rpx 0;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.coupon_price{
  color: #EF291A;
  font-size: 26rpx;
  word-break:break-all;
  line-height: 40rpx;
}
.coupon_price text{
  font-size: 60rpx;
  font-weight: bold;
}
.coupon_condition{
  font-size: 26rpx;
  color: 26rpx;
}

.coupon_con{
  width: 55%;
  padding: 60rpx 0 60rpx 30rpx;
  flex-direction: column;
}
.coupon_con view{
  font-size: 32rpx;
  color: #333333;
}
.coupon_con text{
  font-size: 24rpx;
  color: #999999;
}
.coupon_right{
  width: 5%;
  padding: 0 5%;
  align-items: center;
  font-size: 30rpx;
  color: #ffffff;
}