page{
  background-color: #F3F3F3;
}
.mute{
  width: 50rpx;
  position: absolute;
  bottom: 130rpx;
  right: 4%;
}
.swiper_pages{
  background-color: #9a9899;
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 30rpx;
  padding: 5rpx 20rpx;
  position: absolute;
  right: 3.5%;
  bottom: 60rpx;
}
#container{
  padding-bottom: 120rpx;
}
.swiper{
  position: relative;
  border-bottom:solid 1px #EEEDEF;
}
.swiper swiper{
  width: 750rpx;
  height: 750rpx;
  background-color: #ffffff;
}
.swiper .swiper-item{
  height: 100%;
}
.swiper .swiper-item>view>image,.swiper .swiper-item video{
  width: 100%;
  height: 100%;
}
.video_mask{
  width: 100%;
  height: 80%;
  position: absolute;
  top: 0;
  z-index: 999;
}

/* 活动秒杀 */
.seckill{
  background-color: #f3dee0;
  overflow: hidden;
}
.seckill_left{
  width: 58%;
  background-color: #EF291A; 
  background-repeat: no-repeat;
  align-items: center;
  padding: 30rpx 0;
  position: relative;
  overflow: hidden;
}
.seckill_left:after{
  content: "";
  width: 0;
  height: 0;
  border-color: #f3dee0 transparent;
  border-width: 0 0 200rpx 50rpx;
  border-style: solid;
  position: absolute;
  right:0;
  top: 0;
  bottom: 0;
}
.seckill_button{
  color: #EF291A;
  font-size: 30rpx;
  background-color: #ffffff;
  border-radius: 26rpx;
  padding: 5rpx 25rpx;
  margin: 0 3.5%;
}
.seckill_price{
  color: #ffffff;
  margin-left: 20rpx;
}
.seckill_price view{
  font-size: 46rpx;
  line-height: 45rpx;
}
.seckill_price text:nth-child(2){
  font-size: 26rpx;
  text-decoration:line-through;
  margin-left: 10rpx;
  line-height: 45rpx;
}
.seckill_right{
  flex: 1;
  color: #EF291A;
  text-align: center;
  font-size: 24rpx;
  position:relative;
}

.seckill_right-title{
  font-size: 36rpx;
  color: #333333;
  text-align:center;
  line-height:36rpx;
  margin: 20rpx 0;
  font-weight: bold;
}
.block_end{
  padding: 30rpx 0;
}
.seckill_right-time{
  align-items:center;
  justify-content:center;
}
.seckill_right-time view{
  color: #ffffff;
  background-color: #EF291A;
  border-radius: 6rpx;
  width:36rpx;
  height:36rpx;
  line-height:36rpx;
  text-align:center;
  display: inline-block;
}
.seckill_right-time text{
  padding:0 10rpx;
  font-weight: bold;
}
/* 商品详情内容 */
.goods_con{
  padding: 3.5%;
  background-color: #ffffff;
}
.goods_price{
  font-size: 24rpx;
  color: #BEBEBE;
  line-height: 50rpx;
}
.goods_price text:nth-child(1){
  font-size: 34rpx;
  color: #000000;
}
.goods_price text:nth-child(2){
  text-decoration:line-through;
  margin-left: 10rpx;
}
.goods_price text:nth-child(3){
  float: right;
}
.goods_title{
  color: #333333;
  font-size: 36rpx;
}
.goods_label{
  font-size: 26rpx;
  color: #999999;
}
.goods_label text{
  font-size: 22rpx;
  margin-right: 20rpx;
}
.goods_tag{margin-bottom: 20rpx;}
.goods_tag text{
  color: #EF291A;
  font-size: 18rpx;
  border: 2rpx solid #EF291A;
  padding: 0 8rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
}
.goods_tiem{
  color: #FA8B14;
  font-size: 26rpx;
  align-items: center;
}
.goods_tiem image{
  width: 30rpx;
}
/* 猜你喜欢 */
.like{
  margin-top: 20rpx;
  background-color: #ffffff;
}
.like_title{
  padding: 15rpx 7%;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  background-color: #ffffff;
  margin-bottom:10px;
  position: relative;
}
.like_title::after{
  content: "";
  position: absolute;
  left: 3.5%;top: 30rpx;
  width: 8rpx;
  height: 30rpx;
  background-color: #C3D939;
}
.like_con{
  flex-flow: wrap;
  padding: 0 15rpx;
}
.like_list{
	margin-bottom:15px;
  /* padding: 25rpx; */
  /* box-shadow: 0 0 15rpx rgba(0, 0, 0, 0.103); */
  background-color: #ffffff;
  margin: 0 20rpx 35rpx 20rpx;
}
.like_img{
  width: 180rpx;
  height: 180rpx;
  margin: 0 auto 15rpx auto;
  border-radius: 10rpx;
  overflow: hidden;
}
.like_img image{
  width: 100%;
  height: 100%;
}
.like_list_title{
  font-size: 26rpx;
  color: #333333;
  width: 180rpx;
  height: 80rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.like_label{
  width: 180rpx;
  font-size: 24rpx;
  color: #999999;
}
.like_label text{margin-right: 30rpx;}
.like_buttom{
  width: 150rpx;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.like_buttom view:nth-child(1){
  font-size: 22rpx;
  color: #EF291A;
  display: inline-block;
}
.like_buttom text:nth-child(2){
  font-size: 16rpx;
  color: #BEBEBE;
  text-decoration:line-through;
  margin-left: 10rpx;
}
.like_buttom view:nth-child(3){
  font-size: 24rpx;
  color: #999999;
}
.like_shopping{
  float: right;
  position: relative;
}
.like_shopping image{
  width: 50rpx;
}
.like_shopping .weui-badge{
  position: absolute;
  right: -14rpx;
  top: -1rpx;
  font-size: 15rpx;
  border:solid 5rpx #fff;
}
.goods_details image{
  width: 100%;
}
/* 操作块 */
#footer{
  width: 100%;
  height: 100rpx;
  align-items: center;
  background-color: #ffffff;
  position: fixed;
  bottom: 0;
  border-top: 2rpx solid #EEEEEE;
}
.footer_left{
  width: 100rpx;
  color: #999999;
  font-size: 20rpx;
  text-align: center;
  position: relative;
}
.footer_left .weui-badge{
  position: absolute;
  right: 20rpx;
  top: -10rpx;
  padding: 1.5rpx 7rpx;
  font-size: 20rpx;
}
.footer_left image{
  width: 36rpx;
}
.footer_num{
  margin-right: 104rpx;
  align-items: center;
  padding: 0 3.5%;
}
.footer_num view{
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 50%;
  text-align: center;
  font-size: 26rpx;
}
.footer_num input{
  width: 204rpx;
  text-align: center;
}
.footer_jian{
  border: 2rpx solid #E2E2E2;
  color: #333333;
}
.footer_jia{
  border: 2rpx solid #EF291A;
  background-color: #EF291A;
  color: #FFFFFF;
}
.footer_right{
  flex: 1;
  background-color: #C3D939;
  color: #ffffff;
  font-size: 32rpx;
  text-align: center;
  border-radius: 34rpx;
  padding: 10rpx 0;
  margin-right: 3.5%;
}
.footer_status-seckill{
  background-color: #EF291A;
}
.footer_status-disabled{
  background-color: #999999;
}

.mask_tiem{
  background-color: #FFFFFF;
  height:90rpx;
  border-top: 2rpx solid #EEEDEF;
  text-align: center;
  line-height: 90rpx;
  font-size: 30rpx;
}
.mask_tiem view:nth-child(1){
  flex: 1;
  color: #666666;  
}
.mask_tiem view:nth-child(2){
  background-color: #C3D939;
  flex: 1;
  color: #FFFFFF;
}