page{
  background-color: #F3F3F3;
}
#container{
  margin: 0 0 100rpx 0;
}
.header{
  background-color: #ffffff;
  padding: 20rpx 0;
}
.header_search{
  width: 90%;
  height: 80rpx;
  margin: 0 auto;
  background-color: #F6F6F6;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  padding: 0 1.5%;
  color: #333333;
}
.header_search image{
  width: 35rpx;
  margin: 0 20rpx;
}
.header_search input{
  flex: 1;
  height: 50%;
  font-size: 30rpx;
  padding-right: 15rpx;
}
/* 地图 */
.map{
  width: 100%;
  height: 500rpx;
}

/* 自提点信息 */
.carry{
  background-color: #ffffff;
}
.carry_title{
  font-size: 26rpx;
  color: #666666;
  line-height: 80rpx;
  background-color: #F3F3F3;
  padding: 0 3.5%;
}
.carry_list{
  padding: 20rpx 0;
  margin: 0 3.5%;
  border-bottom: 2rpx solid #EEEEEE;
}
.carry_user{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
  margin-top: 10rpx;
}
.carry_user image{
  width: 100%;
  height: 100%;
}
.carry_con{
  flex: 1; 
  max-width: 500rpx;
  padding-left: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.carry_con text{
  font-size: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.carry_con view{
  font-size: 26rpx;
  color: #999999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.carry_operation{
  width: 150rpx;
  font-size: 20rpx;
  height: 150rpx;
  color: #999999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  align-items: flex-end;
  justify-content: center;
  flex-flow: column;
  line-height: 45rpx;
  margin: 15rpx 0 0 0;
}
.carry_operation image{
  width: 46rpx;
  height: 46rpx;
}
.buttom{
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #666666;
  text-align: center;
  border-radius: 10rpx;
  margin: 20rpx auto;
  font-size: 26rpx;
}
.buttom image{
  width: 28rpx;
  height: 16rpx;
}

.wx-toast-box{
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
  justify-content: center;
  align-items: center;
  transition: all 0.3s linear 0s;
}
.wx-toast-content{
  max-width: 80%;
  border-radius:30rpx;
  padding: 30rpx;
  background: rgba(0, 0, 0, 0.6);
  transition: all 0.3s linear 0s;
}
.wx-toast-toast{
  height: 100%;
  width: 100%;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  word-break:break-all;
}