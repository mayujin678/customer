/* pages/home/payment/index.wxss */
page{
  background-color: #F3F3F3;
}
#container{
  padding: 0 3.5%;
}
.wrap-main{
  padding: 0 15rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.wrap-main-title{
  width: 95%;
  margin: 2.5%;
  padding: 2.5% 0;
  position: relative;
}
.wrap-main-title .user{
  display: inline-block;
  font-size: 26rpx;
  color:#333;
  width: 80%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.wrap-main-title .order_no{
  display: block;
  font-size: 22rpx;
  color:#999999;
}
.wrap-main-title .status{
  position: absolute;
  right: 25rpx;
  top:25rpx;
  font-size: 26rpx;
  color:#13E02B;
}

.wrap-main-content{
  width: 97%;
  margin: 0 auto;
}
.commodity_img{
  width: 100%;
  position: relative;
  display: inline-block;
}
.commodity_img-item{
  width: 113rpx;
  height: 113rpx;
  margin: 0 20rpx 1% 0;
  display: inline-block;
  border-radius: 10rpx;
  overflow: hidden;
}
.commodity_img-item:nth-child(5n){
  margin-right: 0;
}
.commodity_img image{
  width: 100%;
  height: 100%;
}
.wrap-main-content .total{
  width: 100%;
  text-align: right;
  color: #666;
  font-size: 22rpx;
  padding-bottom: 2.5%;
}
.wrap-main-content .total .price{
  color:#333;
  font-size: 38rpx;
}

.more_con{
  height: 90rpx;
  align-items: center;
  padding: 0 20rpx;
  background-color: #ffffff;
  margin-top: 20rpx;
  border-radius: 10rpx;
}
.more_con view:nth-child(1){
  font-size: 30rpx;
  color: #333333;
  flex: 1;
}
.check_select{
  width: 25rpx;
  height: 25rpx;
  border: 4rpx solid #666666;
  border-radius: 50rpx;
  position: relative;
  display: inline-block;
  margin-right: 15rpx;
}
.check_select view{
  width: 22rpx;
  height: 22rpx;
  position: absolute;
  top: 0;bottom: 0;left: 0;right: 0;
  margin: auto;
  background-color: #C3D939;
  border-radius: 50%;
}
.select{
  border: 4rpx solid #C3D939;
}

.weui-btn{
  width: 100%;
  font-size: 30rpx;
  border-radius:10rpx;
  line-height: 40rpx;
  padding:25rpx 0;
  margin-top: 120rpx;
}
.weui-btn_primary:not(.weui-btn_disabled):active{
  background-color: #C3D939;
}