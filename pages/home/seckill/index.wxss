/* pages/home/seckill/index.wxss */
page{
  background-color: #F3F3F3;
}
.nav-bar{
  position:fixed;
  top:0;
  width:100%;
  background-color: #fff;
  color: #333;
  z-index: 22;
  font-size: 14px;
}
.on{
  background-color: #fff;
  color:#000;
}
.nav-bar_title{
  position:absolute;
  text-align: center;
}
.nav-bar_title image{
  width: 20px;
  position:absolute;
  top:0;
  bottom: 0;
  left: 0;
  margin: auto;
}
#activity{
  padding-top: 160rpx;
}
.activity-title{
  position: absolute;
  top: 0;
  width: 100%;
  height: 244rpx;
  z-index: -1;
}
.activity-title image{
  width: 100%;
  height: 100%;
}
.activity-title view{
  font-size: 36rpx;
  color: #ffffff;
  text-align: center;
  line-height: 170rpx;
  position: absolute;
  top: 0;left: 40rpx;right: 0;
  margin: auto;
}
.activity_con{
  padding: 0 30rpx;
}
.activity_list{
	margin-bottom:20rpx;
  padding: 20rpx 20rpx 20rpx 30rpx;
  /* box-shadow: 0 0 10rpx rgba(114, 114, 114, 0.103); */
  background-color: #ffffff;
  position: relative;
  border-radius: 10rpx;
}
.list_tis{
  width: 40rpx;
  height: 50rpx;
  background-color: #EF291A;
  border-radius: 6rpx;
  font-size: 16rpx;
  color: #ffffff;
  position: absolute;
  top: -5rpx;
  left: 25rpx;
  text-align: center;
  padding: 5rpx 0;
}
.list_left{
  width: 180rpx;
  height: 180rpx;
  margin-right: 15rpx;
  align-items: center;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}
.list_left2{
  width: 160rpx;
  height: 122rpx;
  margin-right:27rpx;
}
.list_left3{
  width: 136rpx;
  height: 136rpx;
  margin-right:30rpx;
}
.list_left1{
  width: 140rpx;
  height: 140rpx;
  margin-right:30rpx;
}
.activity_img{
  width: 100%;
  height: 100%;
  transition: all .3s ease;
}
.list_con{
  flex: 1;
  flex-direction: column;
  justify-content: flex-start;
}
.activity_list_title{
  font-size: 26rpx;
  color: #333333;
  max-width: 290rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.activity_label{
  font-size: 22rpx;
  color: #999999;
}
.activity_label view{margin-right: 30rpx;}
.activity_tag view{
  color: #EF291A;
  font-size: 18rpx;
  border: 2rpx solid #EF291A;
  padding: 0 8rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
  display: inline-block;
}
.activity_buttom{
  display: inline-block;
}
.activity_buttom text:nth-child(1){
  font-size: 26rpx;
  color: #000000;
}
.activity_buttom text:nth-child(2){
  font-size: 26rpx;
  color: #BEBEBE;
  text-decoration:line-through;
  margin: 0 20rpx;
}
.activity_progress{
  width: 192rpx;
  position: relative;
}
.activity_progress view{
  color: #ffffff;
  font-size: 16rpx;
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;right: 0;
  margin: 0 auto;
}
.seckill_buttom{
  width: 130rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 23rpx;
  margin-top: 20rpx;
}
.seckill_buttom text:nth-child(1){
  font-size: 28rpx;
  color: #EF291A;
  line-height:26rpx;
}
.seckill_buttom view:nth-child(2){
  font-size: 20rpx;
  color: #BEBEBE;
  text-decoration:line-through;
  margin: 14rpx 0 0 0;
}
.discount_title{
  width: 400rpx;
  margin-top: 10rpx;
  font-size: 26.2rpx;
  color: #333333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.discount_buttom{
  width: 200rpx;
  height: 46rpx;
  margin:0;
  position: relative;
  align-items: center;
  font-size:0
}
.discount_buttom image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;left: 0;
}
.discount_rate{
  color:#4C4004; 
  font-size:20rpx; 
  background:#F9F283;
  text-align: center;
  border-radius: 8rpx;
  padding:2rpx 8rpx;
  display:inline;
}
.discount_buttom view:nth-child(2){
  margin-left: 0;
}
.discount_buttom view text:nth-child(1){
  font-size:30rpx;
  color: #333333;
  text-align: center;
}
.discount_buttom view:nth-child(3){
  font-size:35rpx;
  color: #FFFFFF;
  z-index: 999;
  text-align: center;
  width: 140rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.discount_buttom text:nth-child(1){
  font-size:22rpx;
  color: #FFFFFF;
}

.list_right{
  width: 180rpx;
  align-items: flex-end;
  justify-content: flex-end;
}
.seckill_right-time{
  align-items:center;
  justify-content:center;
  font-size: 18rpx;
  margin-bottom: 18rpx;
}
.seckill_right-time view{
  color: #ffffff;
  background-color: #999999;
  border-radius: 6rpx;
  width:30rpx;
  height:30rpx;
  line-height:30rpx;
  text-align:center;
  display: inline-block;
}
.seckill_right-time text{
  padding:0 5rpx;
  font-weight: bold;
  color: #999999;
}
.list_right .seal{
  width:90rpx;
  height:90rpx;
  border-radius: 50%;
  border: 1rpx solid #999999;
  align-items: center;
  justify-content: center;
}
.list_right .seal view{
  width:72rpx;
  height:72rpx;
  text-align: center;
  line-height: 72rpx;
  border-radius: 50%;
  border: 1rpx dashed #999999;
  color: #999999;
  font-size: 20rpx;
  transform:rotate(-35deg);
}
.buy{
  color: #ffffff;
  background-color: #C3D939;
  border-radius: 26rpx;
  padding: 10rpx 24rpx;
  font-size: 24rpx;
  text-align:center;
}
/* .list_right view{
  color: #EF291A;
  font-size: 22rpx;
  line-height: 60rpx;
} */
.like_shopping{
  float: right;
  position: relative;
  height: 40rpx;
  margin-top: 70rpx;
}
.like_shopping image{
  width: 50rpx;
}
.like_shopping .weui-badge{
  position:absolute;
  right:-20rpx;
  top:-10rpx;
  font-size: 18rpx;
  border:solid 5rpx #fff;
}
.goods_refund{
  font-size: 30rpx;
  color: #333333;
  float: right;
  align-items: center;
  text-align: center;
  border-radius: 10rpx;
  margin: 50rpx 0 0 0;
  height: 46rpx;
}
.goods_refund view{
  width: 44rpx;
  height: 44rpx;
  line-height: 40rpx;
  border-radius: 50%;
  font-size: 35rpx;
  border: 1rpx solid #CCCCCC;
  color: #CCCCCC;
}
.goods_refund view:nth-child(3){
  line-height: 44rpx;
}
.goods_refund input{
  width: 80rpx;
  height: 46rpx;
}
.goods_refund image{
  width: 44rpx;
}
.goods_refund-bottom{
  background-color: #C3D939;
  color: #ffffff !important;
  border: 1rpx solid #C3D939 !important;
}
.special{
  width: 98rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  border-radius: 50%;
  font-size: 20rpx;
  position: absolute;
  top: 0;left: 0;bottom: 0;right: 0;
  margin: auto;
  color: #ffffff;
  background-color: rgba(0, 0, 0, 0.6);
}

.mask_tiem{
  background-color: #FFFFFF;
  height:90rpx;
  border-top: 2rpx solid #EEEDEF;
  text-align: center;
  line-height: 90rpx;
  font-size: 30rpx;
}
.mask_tiem view:nth-child(1){
  flex: 1;
  color: #666666;  
}
.mask_tiem view:nth-child(2){
  background-color: #C3D939;
  flex: 1;
  color: #FFFFFF;
}