page{
  background-color:#fff;
  position:relative;
}
.classify{
  height:100%;
  position:relative;
}
.header{
  padding:20rpx 30rpx;
  position: fixed;
  top: 0;
  left:0;
  width:100%;
  box-sizing: border-box;
  z-index: 999;
  background-color: #ffffff;
}
.header_search{
  border-radius:35rpx;
  background-color:#F6F6F6;
  align-items: center;
  padding:0 35rpx;
  height:70rpx;
}
.header_search image{
  width:26rpx;
}
.header_search input{
  padding:0 25rpx;
  font-size:28rpx;
  flex:1;
  line-height:30rpx;
}
.sider{
  position:fixed;
  left:0;
  top:110rpx;
  bottom:0;
  width:180rpx;
  background-color:#F8F8F8;
  z-index:99;
}
.sider-fixed{
  /* position:fixed;
  top:0; */
}
.sider-item{
  font-size:28rpx;
  color:#999;
  text-align:center;
  padding:25rpx 0;
  line-height:30rpx;
  position: relative;
}
.on{
  background-color:#fff;
  color:#666;
}
.on::before{
  content:"";
  width:6rpx;
  height:30rpx;
  background-color:#C3D939;
  position:absolute;
  top:25rpx;
  left:0;
}
.main{
  padding:0 0 0 180rpx;
  /* height:200%; */
}
.main-item{
  padding:26rpx 30rpx 26rpx 26rpx;
  position:relative;
}
.main-thumbnail{
  width: 146rpx;
  height: 146rpx;
  margin:0 30rpx 0 0;
  align-items: center;
  border-radius: 10rpx;
  overflow: hidden;
  font-size:0;
  position: relative;
}
.main-thumbnail image{
  width:100%;
  height:100%;
  border-radius:10rpx;
  /* transition: all .3s ease;
  opacity: 0; */
}
.thumbnail-active{
  /* opacity: 1 !important; */
}
.main-primary{
  flex-direction: column;
  justify-content:space-between;
  flex:1;
}
.main-primary__title{
  max-width: 335rpx;
  font-size:28rpx;
  color:#333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-weight: bold;
}
.main-primary__tag{
  font-size:0;
  margin:6rpx 0 7rpx 0;
}
.main-primary__tag text{
  color: #4C4004;
  font-size: 18rpx;
  padding: 0 10rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
  background-color: #F9F283;
}
.main-primary__label{
  color:#999;
  font-size:20rpx;
  margin: 6rpx 0 0 0;
}
.main-primary__price{
  max-width: 350rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  line-height:30rpx;
  margin: 5rpx 0 0 0;
}
.main-primary__price view{
  font-size:26rpx;
  line-height:34rpx;
}
.main-primary__price view:first-child{
  color:#333333; 
  padding:0 40rpx 0 0;
  font-weight: bold;
  font-size:32rpx;
}
.main-primary__books{
  color:#999999;
  text-decoration:line-through;
  font-size: 18rpx;
}
.main-primary__cart{
  position:absolute;
  right:0;
  bottom:0;
}
.main-primary__cart image{
  width: 44rpx;
}
.main-primary__cart .weui-badge{
  position: absolute;
  right:13rpx;
  top:15rpx;
  font-size:20rpx;
  line-height:26rpx;
  border:solid 5rpx #fff;
}
.main-bottom{
  padding:60rpx 0 30rpx;
  text-align:center;
  font-size:24rpx;
  color:#999999;
}
.main-bottom__logo{
  width:71rpx;
  margin:0 0 19rpx 0;
}
.main-bottom__arrow{
  padding:100rpx 0 50rpx;
  
  /* animation:lanimation 3s ease-in infinite; */
}
.main-bottom__arrow image{
  width:90rpx;
}

.weui-navbar{
  position: fixed;
  top: 180rpx;
  left: 180rpx;
  right: 0;
  z-index: 999;
  display: inline-block;
}
.weui-navbar__item{
  color: #666666;
  font-size:22rpx;
  position: static;
  padding: 15rpx 0;
  line-height: 50rpx;
  display: inline-block;
}
.weui-navbar__item:nth-child(1){
  width: 150rpx;
  margin: 0 200rpx 0 0;
}
.weui-navbar__item:nth-child(2){
  width: 100rpx;
}
.weui-navbar__item:nth-child(3){
  width: 100rpx;
}
.weui-navbar__title{
  position:relative;
  align-items: center;
  justify-content: center;
}
.navbar__title-order{
  width: 25rpx;
  display: inline-block;
}
.navbar__title-ascending{
  width: 0;
  height: 0;
  border-left: 9rpx solid transparent;
  border-right: 9rpx solid transparent;
  border-bottom: 10rpx solid #999999;
  margin-bottom: 4rpx;
}
.navbar__title-descending{
  width: 0;
  height: 0;
  border-left: 9rpx solid transparent;
  border-right: 9rpx solid transparent;
  border-top: 10rpx solid #999999;
}
.title-descending{
  border-top: 10rpx solid #C3D939;
}
.title-ascending{
  border-bottom: 10rpx solid #C3D939;
}
.weui-navbar__item.weui-bar__item_on,.weui-navbar__item:active{
  background-color:transparent;
}
.weui-navbar__item.weui-bar__item_on{
  color:#333333;
}

.weui-navbar:after{
  height: 0;
  border: none;
}
.main-nav{
  padding:30rpx 0 0 10rpx;
  font-size:0;
  background-color: #ffffff;
  border-bottom:solid 1rpx #EEEDEF;
  position: fixed;
  top: 90rpx;
  width: 75%;
  z-index: 9999;
}
.main-list{
  padding: 160rpx 0 0 0;
}
.nav-item{
  line-height:50rpx;
  font-size:26rpx;
  color:#666;
  border-radius:2rpx;
  margin:0 0 14rpx 16rpx;
  padding:0 24rpx;
  white-space:nowrap;
  display: inline-block;
}
.current{
  color: #C3D939;
  font-weight:500;
  border-radius: 18rpx;
}
.main-nav-list{
  flex: 1;
  overflow: hidden;
}
.weui-cell_access .weui-cell__ft:after{
  transform:rotate(90deg);
  margin:-14px 0 0;
}
.main-nav .weui-cell__ft{
  border-right:solid 30rpx transparent; 
}
.mask{
  background-color: rgba(0, 0, 0, 0.6);
  position: fixed;
  top:180rpx;
  left:180rpx;
  right:0;
  bottom:0;
  z-index: 998;
}
.mask-nav{
  position:fixed;
  top:180rpx;
  left:180rpx;
  right:0;
  z-index:999;
  background-color: #fff;
}
.mask-nav .weui-cell_access{
  align-items:center;
  height:80rpx;
  padding:20rpx 30rpx 0 20rpx;
}
#mask-category .weui-cell__ft:after{
  transform:rotate(-90deg);
}

.mask-nav__title{
  font-size:26rpx;
  color:#666666;
  flex:1;
}
.mask-nav-list{
  padding:10rpx 0 10rpx 10rpx;
  flex-wrap: wrap;
}
.mask-nav-list .nav-item{
  margin:0 0 10rpx 0;
  width:33.3%;
  overflow:auto;
  box-sizing:border-box;
  padding:0 10rpx;
}
.main-nav-list scroll-view{
  white-space:nowrap;
  flex: 1;
  overflow: hidden;
}
.weui-loadmore{
  margin-top: 180rpx;
}
.main-bottom__arrow .weui-cell__ft{
  text-align:center;
  color:#999999;
  font-size:24rpx;
  align-items:center;
  justify-content:center;
}
.main-bottom__arrow .weui-cell__ft::after{
  position:inherit;
  margin:0 0 0 18rpx;
  transform:rotate(0);
}

.goods_refund{
  font-size: 30rpx;
  color: #333333;
  float: right;
  align-items: center;
  text-align: center;
  border-radius: 10rpx;
  margin: 50rpx 0 0 0;
  height: 46rpx;
}
.goods_refund view{
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 50%;
  font-size: 40rpx;
  border: 1rpx solid #CCCCCC;
  color: #CCCCCC;
}
.goods_refund view:nth-child(3){
  line-height: 40rpx;
}
.goods_refund input{
  width: 80rpx;
  height: 46rpx;
}
.goods_refund image{
  width: 40rpx;
}
.goods_refund-bottom{
  background-color: #C3D939;
  color: #ffffff !important;
  border: 1rpx solid #C3D939 !important;
}
.add_cart{
  position: absolute;
  right: 30rpx;
  bottom: 32rpx;
}
.special{
  width: 98rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  border-radius: 50%;
  font-size: 20rpx;
  position: absolute;
  top: 0;left: 0;bottom: 0;right: 0;
  margin: auto;
  color: #ffffff;
  background-color: rgba(0, 0, 0, 0.6);
}

@-webkit-keyframes lanimation
{
  0%{
    transform: translateY(0)
  }
  50%{
    transform: translateY(30rpx)
  }
  100%{
    transform: translateY(0)
  }
}
.weui-cell_access:active{
  background-color: transparent;
}

.mask_tiem{
  background-color: #FFFFFF;
  height:90rpx;
  border-top: 2rpx solid #EEEDEF;
  text-align: center;
  line-height: 90rpx;
  font-size: 30rpx;
}
.mask_tiem view:nth-child(1){
  flex: 1;
  color: #666666;  
}
.mask_tiem view:nth-child(2){
  background-color: #C3D939;
  flex: 1;
  color: #FFFFFF;
}